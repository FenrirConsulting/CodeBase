<MudAppBar Position="Sticky">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="MudBlazor.Color.Info" Edge="Edge.Start" Size="Size.Large"
                   OnClick="async ()=> await OnSidebarToggled.InvokeAsync()" />

    <MudSpacer />

    <MudText Typo="Typo.h5">@userDisplayName</MudText>

    @if (_isLightMode)
    {
        <MudIconButton Icon="@Icons.Material.Filled.WbSunny" Color="MudBlazor.Color.Primary" Size="Size.Large" OnClick="async () => await ToggleTheme()" />
    }
    else
    {
        <MudIconButton Icon="@Icons.Material.Filled.DarkMode" Color="MudBlazor.Color.Primary" Size="Size.Large" OnClick="async () => await ToggleTheme()" />
    }
    <MudButton Color="MudBlazor.Color.Primary" Size="Size.Large" OnClick="async () => await Logout()">Logout</MudButton>
</MudAppBar>