@inherits LayoutComponentBase

@* Loading Indicator *@
@if (_isLoading)
{
    <MudProgressCircular Indeterminate="true" Size="Size.Large" Class="mud-theme-primary mx-auto d-block mt-5" />
}
else
{
    @* Main Layout *@
    <MudLayout>
        @* Application Bar *@
        <AppBar OnSidebarToggled="ToggleSidebar" />

        @* Navigation Menu *@
        <NavMenu SideBarOpen="_sideBarOpen"></NavMenu>

        @* Main Content Area *@
        <MudMainContent Class="row content mudblazor-main-content flex-grow-1 d-flex mt-2" Style="height: 100%;">
            @Body
        </MudMainContent>
    </MudLayout>

    @* MudBlazor Providers *@
    <MudThemeProvider Theme="@(_themeService?.CurrentTheme)" />
    <MudDialogProvider />
    <MudSnackbarProvider />
}